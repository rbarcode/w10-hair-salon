@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new client</h4>

<p><strong>NOTE:</strong> You need to have at least one stylist before you can add a client</p>
<p>Go to @Html.ActionLink("this page", "Create", "Stylists") to add a stylist.</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required = "required" })
  <br>
  @Html.Label("Phone Number")
  @Html.TextBoxFor(model => model.PhoneNumber, new { type="tel", minlength=10, maxlength=10 })
  <br>
  @Html.Label("Email Address")
  @Html.TextBoxFor(model => model.EmailAddress, new { type="email" })
  <br>
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")
  <br>
  <input type="submit" value="Add New Client" />
}

<p>@Html.ActionLink("Show All Clients", "Index")</p>
<p>@Html.ActionLink("Show All Stylists", "Index", "Stylists")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>