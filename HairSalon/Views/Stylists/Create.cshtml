@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required="required" })
  <br>
  @Html.Label("Phone Number")
  @Html.TextBoxFor(model => model.PhoneNumber, new { type="tel", minlength=10, maxlength=10 })
  <br>
  <input type="submit" value="Add Stylist" />
}
<p>@Html.ActionLink("Show All Stylists", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>